<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Computer_Sem_Activity"
    android:layout_marginBottom="8dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/sem_1"
                    android:background="@android:color/white"
                    android:id="@+id/imagebutton1"/>
                <ImageButton
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/sem_2"
                    android:background="@android:color/white"
                    android:id="@+id/imagebutton2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/sem_3"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/imagebutton3"/>
                <ImageButton
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/sem_4"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/imagebutton4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <ImageButton
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/sem_5"
                    android:background="@android:color/white"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/imagebutton5"/>
                <ImageButton
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/sem_6"
                    android:background="@android:color/white"
                    android:layout_marginRight="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/imagebutton6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <ImageButton
                    android:layout_weight="1"
                    android:src="@drawable/sem_7"
                    android:background="@android:color/white"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/imagebutton7"/>
                <ImageButton
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/sem_8"
                    android:background="@android:color/white"
                    android:layout_marginRight="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/imagebutton8"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>